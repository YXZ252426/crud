<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.crud.repository.RoleRepository">
    <!--新增用户类型-->
    <insert id="insertRole" parameterType="com.example.crud.entity.Role" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO roles (name)
        VALUES (#{name})
    </insert>
    <select id="findByName" resultType="com.example.crud.entity.Role" parameterType="String">
        SELECT *
        FROM roles
        WHERE name = #{name}
    </select>
    <!--通过INNER JOIN实现user和role的连接-->
    <select id="findRolesByUserId" parameterType="Long" resultType="com.example.crud.entity.Role">
        SELECT r.id, r.name
        FROM roles r
                 INNER JOIN users_roles ur ON r.id = ur.role_id
        WHERE ur.user_id = #{userId}
    </select>
</mapper>
